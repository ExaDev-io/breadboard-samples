{
	"author": "",
	"dependencies": {
		"@google-labs/breadboard": "^0.5.1",
		"@google-labs/core-kit": "^0.1.0",
		"@google-labs/llm-starter": "^0.2.1",
		"@paulkinlan/claude-breadboard-kit": "^2.2.5",
		"comlink": "^4.4.1",
		"dompurify": "^3.0.6",
		"marked": "^11.0.0"
	},
	"description": "Run `npm run dev` to start the development server.",
	"devDependencies": {
		"@esbuild-plugins/node-globals-polyfill": "^0.2.3",
		"@types/dompurify": "^3.0.5",
		"@types/node": "^20.10.7",
		"@typescript-eslint/eslint-plugin": "^6.12.0",
		"@typescript-eslint/parser": "^6.12.0",
		"dotenv": "^16.3.1",
		"tsx": "^4.7.0",
		"typescript": "^5.3.2",
		"vite": "^5.0.2",
		"vite-plugin-full-reload": "^1.1.0",
		"vite-plugin-top-level-await": "^1.3.1",
		"vite-plugin-watch-and-run": "^1.4.4",
		"wireit": "^0.14.1"
	},
	"directories": {
		"doc": "docs"
	},
	"files": [
		"dist/src"
	],
	"keywords": [],
	"license": "ISC",
	"main": "./dist/src/index.js",
	"name": "the-critic",
	"scripts": {
		"build": "wireit",
		"build:vite": "FORCE_COLOR=1 vite build",
		"dev": "FORCE_COLOR=1 npm run generate:graphs && vite --host",
		"generate:docs": "typedoc --plugin typedoc-plugin-markdown",
		"generate:graphs": "tsx src/make-graphs.ts",
		"run": "wireit",
		"test": "wireit",
		"validate": "wireit"
	},
	"type": "module",
	"version": "1.0.0",
	"wireit": {
		"build": {
			"command": "tsc --noEmit --listFiles | grep -v 'node_modules'"
		},
		"run": {
			"command": "tsx ./run.ts"
		},
		"test": {
			"dependencies": [
				"run"
			]
		},
		"validate": {
			"dependencies": [
				"test",
				"build"
			]
		}
	}
}
