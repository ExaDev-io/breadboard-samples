{
	"compilerOptions": {
		"baseUrl": "./src",
		"module": "NodeNext",
		"moduleResolution": "nodenext",
		"allowImportingTsExtensions": true,
		"noEmit": true,
		"paths": {
			"~/*": [
				"./*"
			]
		},
		"resolveJsonModule": true,
		"rootDir": "./",
		"skipLibCheck": true,
		"target": "ESNext"
	},
	"extends": "../../tsconfig.minimal.json"
}
